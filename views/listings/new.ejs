<% layout("/Layouts/boilerplate")%>
<body>
  <br /><br />
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Add a new listing</h3>
      <form method="POST" action="/listings " class="needs-validation">
        <div class="mb-3">
          <label for="title" class="form-label"> Enter Title </label>
          <input
            name="listing[title]"
            placeholder="Enter title here"
            type="text"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">
            Enter Description
          </label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"> Enter image link </label>
          <input
            name="listing[image][url]"
            placeholder="Enter image URL/link"
            type="text"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label"> Enter Price </label>
            <input
              name="listing[price]"
              placeholder="12000"
              type="number"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label"> Enter Country </label>
            <input
              name="listing[country]"
              placeholder="Pakistan"
              type="text"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label"> Enter location </label>
          <input
            name="listing[location]"
            placeholder="Lahore"
            type="text"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-dark add-btn">Add</button>
        <br /><br />
      </form>
    </div>
  </div>
</body>
